{
  "name": "firestore-demo-api",
  "version": "1.0.0",
  "description": "Node.js + Express + Firestore 會員訂單查詢系統 - 支援公開與私有 API",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "seed": "node scripts/seed.js",
    "clean:firestore": "node scripts/clean-firestore.js",
    "clean:authentication": "node scripts/clean-auth.js",
    "clean:all": "npm run clean:firestore && npm run clean:authentication",
    "migrate": "node src/migrations/index.js",
    "migrate:dry": "node src/migrations/index.js --dry-run",
    "collect:indexes": "node scripts/collect-indexes.js",
    "update:indexes": "node scripts/update-indexes.js",
    "sync:indexes": "npm run collect:indexes && npm run update:indexes"
  },
  "keywords": [
    "firestore",
    "express",
    "nodejs",
    "firebase",
    "rest-api",
    "cloud-run"
  ],
  "author": "scottchayaa <mmx112945@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.13.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-list-endpoints": "^7.1.1",
    "express-validator": "^7.0.1",
    "firebase-admin": "^12.0.0",
    "helmet": "^7.1.0",
    "module-alias": "^2.2.3",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "pino-std-serializers": "^7.0.0"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "_moduleAliases": {
    "@": "./src"
  }
}
